{
  "manifest_version": 2,

  "name": "Kaomoji-Typer",
  "description": "insert an description here*",
  "version": "0.138",

  "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
  },

  "content_scripts": [
      {
          "matches": ["https://translate.google.com/*"],
          "js": ["js/jquery-3.0.0.min.js", "js/moment-2.14.1.min.js", "js/lodash-4.14.2.min.js", "js/index.js"],
          "css": ["css/index.css"]
      }

  ],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Kaomoji Typer"
  },

  "permissions": [
    "https://translate.google.com/*"
  ]
}
